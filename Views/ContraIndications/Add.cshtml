@model ContraIndication
@{
    ViewBag.Title = "Contra-Indications";
    Layout = "_AdminLayout";
}

<!DOCTYPE html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Prescription</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" />
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
</head>

<script type="text/javascript">

    $(function () {
        $("#cmbIngredient1").select2();
    });

    $(function () {
        $("#cmbConditions").select2();
    });
</script>


<body>
    <div class="container">
        <main>
            <div class="text-center">
                <p2>
                    You are required to fill all fields in this form.<br />
                    If City/suburb you reside in is not listed, choose the nearest one.
                </p2>
            </div>

            <br /><br />
            <form asp-controller="ContraIndications" asp-action="Add" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="input-group">
                    <div class="col-6 form-group">
                        <label asp-for="ContraIndicationName">Description</label>
                        <input asp-for="ContraIndicationName" class="form-control" />
                        <div><span asp-validation-for="ContraIndicationName" class="text-danger"></span></div>
                    </div>
                </div>

                <div class="input-group">
                    <div class="col-6 form-group">
                        <label asp-for="IngredientId">Ingredient Name</label>
                        <select id="cmbIngredient1" asp-for="IngredientId" asp-items="@ViewBag.Ingredients" class="form-control">
                            <option>-- Select Ingredient --</option>
                        </select>
                        <div><span asp-validation-for="IngredientId" class="text-danger"></span></div>
                    </div>

                </div>
                <div class="input-group">
                    <div class="col-6 form-group">
                        <label asp-for="ConditionId">Condition Name</label>
                        <select id="cmbConditions" asp-for="ConditionId" asp-items="@ViewBag.Conditions" class="form-control">
                            <option>-- Select Condition --</option>
                        </select>
                        <div><span asp-validation-for="ConditionId" class="text-danger"></span></div>
                    </div>
                </div>


                <button type="submit" class="btn btn-primary">Add Contra-Indication</button>

            </form>

        </main>
    </div>
</body>
