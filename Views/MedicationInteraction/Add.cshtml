@model MedinteractionVM
@{
    ViewBag.Title = "Medication Interaction";
    Layout = "_AdminLayout";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Prescription</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" />
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
</head>

<script type="text/javascript">

    $(function () {
        $("#cmbIngredient1").select2();
    });

    $(function () {
        $("#cmbIngredient2").select2();
    });
</script>

<div class="text-center">
    <form asp-action="Add" asp-controller="MedicationInteraction" method="post">
        <h1 class="display-4">Add Medication Interactions</h1>
        <label asp-for="Description"class="col-6">Description</label>
        <input asp-for="Description" class="form-control" />
        <label asp-for="Ingredient1" class="col-6">Active Ingredient 1</label>
        <select class="form-control" id="cmbIngredient1" asp-for="Ingredient1" asp-items="@ViewBag.Ingredients"></select>
        <br />
        <label asp-for="Ingredient2" class="col-6">Active Ingredient 1</label>
        <select class="form-control" id="cmbIngredient2"  asp-for="Ingredient2" asp-items="@ViewBag.Ingredients"></select>
        <button class="btn btn-primary" type="submit">Add</button>
    </form>
</div>

