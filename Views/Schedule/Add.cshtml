@model ScheduleVM
@{
    ViewBag.Title = "Medication Schedule";
    Layout = "_AdminLayout";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Prescription</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
</head>

<div class="text-center">
    <form asp-action="Add" asp-controller="Schedule" method="post">
        <h1 class="display-4">Add Active Ingredients</h1>
        <label asp-for="ScheduleDescription" class="col-6">Schedule Description</label>
        <input type="text" asp-for="ScheduleDescription" class="col-6 form-control" />
        <button class="btn btn-primary" type="submit">Add</button>
    </form>

    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
