@{
    ViewBag.Title = "List Pharmacists";
    Layout = "_AdminLayout";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Prescription</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
</head>

<div class="form-group">
    @if (TempData.Keys.Contains("PharmacistEdit"))
    {
        <h4 class="bg-success text-center text-white p-2">

            @TempData["PharmacistEdit"]
        </h4>
        <br />
    }
    @if (ViewBag.Pharmacists.Count > 0)
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Pharmacist Name</th>
                    <th>Pharmacist Email</th>
                    <th>Pharmacist Contact Number</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (PharmacistAccount list in ViewBag.Pharmacists)
                {
                    <tr>
                        <td>@list.FirstName</td>
                        <td>@list.Surname</td>
                        <td>@list.ContactNo</td>
                        <td>@list.Email</td>
                        <td><a class="btn btn-primary" asp-action="Edit" asp-controller="PharmacistRecords" asp-route-id="@list.PharmacistId">Edit</a></td>
                    </tr>
                }

            </tbody>
        </table>
    }
    else if (ViewBag.Pharmacists.Count == 0)
    {
        <h4 class="bg-warning text-center text-white p-2">No Pharmacist Records</h4>
    }


    <a asp-action="Add" asp-controller="PharmacistRecords" class="btn btn-primary">Register new pharmacist</a>
</div>
