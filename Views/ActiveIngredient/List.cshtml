@{
    ViewBag.Title = "Active Ingredients List";
    Layout = null;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Prescription</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
</head>

<div class="form-group">
    @if (ViewBag.Ingredients.Count > 0)
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (ActiveIngredientVM list in ViewBag.Ingredients)
                {
                    <tr>
                        <td>@list.IngredientDescription</td>
                        <td>@list.Status</td>
                        <td><a class="btn btn-primary" asp-action="Edit" asp-controller="ActiveIngredient" asp-route-id="@list.IngredientID">Edit</a></td>
                    </tr>
                }

            </tbody>
        </table>
    }
    else if (ViewBag.Ingredients.Count == 0)
    {
        <h4 class="bg-warning text-center text-white p-2">No Pharmacy Records</h4>
    }


    <a asp-action="Add" asp-controller="ActiveIngredient" class="btn btn-primary">Add new ingredients</a>
</div>

