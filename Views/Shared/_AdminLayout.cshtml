@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Sidebar Dashboard Template</title>
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="~/css/Sidebar.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" charset="utf-8"></script>
</head>
<body>

    <input type="checkbox" id="check">
    <!--header area start-->
    <header>
        <label for="check">
            <i class="fas fa-bars" id="sidebar_btn"></i>
        </label>
        <div class="left_area">
            <h3>E<span>Presciption</span></h3>
        </div>
        <div class="right_area">
            <a href="#" class="logout_btn">Logout</a>
        </div>
    </header>
    <!--header area end-->
    <!--mobile navigation bar start-->
    <div class="mobile_nav">
        <div class="nav_bar">
            <h4>Pharmacy name</h4>
            <i class="fa fa-bars nav_btn"></i>
        </div>
        <div class="mobile_nav_items">
            <a asp-controller="ActiveIngredient" asp-action="List"><i class="fas fa-list"></i><span>Active Ingredients</span></a>
            <a asp-controller="DosageForm" asp-action="List"><i class="fas fa-plus-square"></i><span>Dosage Form</span></a>
            <a asp-controller="Medication" asp-action="List"><i class="fas fa-medkit"></i><span>Medicatiion</span></a>
            <a asp-controller="ContraIndications" asp-action="List"><i class="fas fa-exclamation-triangle"></i><span>Contra Indications</span></a>
            <a asp-controller="MedicationInteraction" asp-action="List"><i class="fas fa-exclamation"></i><span>Medication Interaction</span></a>
            <a asp-controller="ConditionDiagnosisRec" asp-action="Conditions"><i class="fas fa-heartbeat"></i><span>Condition Diagnosis</span></a>
            <a asp-controller="Medication" asp-action="List"><i class="fas fa-medkit"></i><span>Medicatiion</span></a>
            <a asp-controller="MedicalPracticeRec" asp-action="MedicalPracticeRecs"><i class="fas fa-hospital"></i><span>Medical Practice</span></a>
            <a asp-controller="Doctor" asp-action="Doctors"><i class="fas fa-user-md"></i><span>Doctors</span></a>
            <a asp-controller="PharmacyRecords" asp-action="List"><i class="fas fa-hospital"></i><span>Pharmacy</span></a>
            <a asp-controller="PharmacistRecords" asp-action="List"><i class="fas fa-user-nurse"></i><span>Pharmacists</span></a>
        </div>
    </div>
    <!--mobile navigation bar end-->
    <!--sidebar start-->
    <div class="sidebar">
        <div class="profile_info">
            <h4>Pharmacy name</h4>
        </div>
        <a asp-controller="ActiveIngredient" asp-action="List"><i class="fas fa-list"></i><span>Active Ingredients</span></a>
        <a asp-controller="DosageForm" asp-action="List"><i class="fas fa-plus-square"></i><span>Dosage Form</span></a>
        <a asp-controller="Medication" asp-action="List"><i class="fas fa-medkit"></i><span>Medication</span></a>
        <a asp-controller="ContraIndications" asp-action="List"><i class="fas fa-exclamation-triangle"></i><span>Contra Indications</span></a>
        <a asp-controller="MedicationInteraction" asp-action="Add"><i class="fas fa-exclamation"></i><span>Medication Interaction</span></a>
        <a asp-controller="ConditionDiagnosisRec" asp-action="Conditions"><i class="fas fa-heartbeat"></i><span>Condition Diagnosis</span></a>
        <hr />
        <a asp-controller="MedicalPracticeRec" asp-action="MedicalPracticeRecs"><i class="fas fa-hospital"></i><span>Medical Practice</span></a>
        <a asp-controller="Doctor" asp-action="Doctors"><i class="fas fa-user-md"></i><span>Doctors</span></a>
        <hr />
        <a asp-controller="PharmacyRecords" asp-action="List"><i class="fas fa-hospital"></i><span>Pharmacy</span></a>
        <a asp-controller="PharmacistRecords" asp-action="List"><i class="fas fa-user-nurse"></i><span>Pharmacists</span></a>
    </div>
    <!--sidebar end-->

    <div class="content">
        @RenderBody()
    </div>

    <script type="text/javascript">
    $(document).ready(function(){
      $('.nav_btn').click(function(){
        $('.mobile_nav_items').toggleClass('active');
      });
    });
    </script>

</body>
</html>

