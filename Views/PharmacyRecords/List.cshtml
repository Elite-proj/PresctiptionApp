@{
    ViewBag.Title = "List Pharmacy records";
    Layout = "_AdminLayout";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Prescription</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
</head>

<div class="form-group">
    @if (ViewBag.Pharmacies.Count > 0)
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Pharmacy Name</th>
                    <th>Pharmacy Email</th>
                    <th>Pharmacy Contact Number</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (PharmacyRecordsVM list in ViewBag.Pharmacies)
                {
                    <tr>
                        <td>@list.PharmacyName</td>
                        <td>@list.PharmacyEmail</td>
                        <td>@list.PharmacyContactNo</td>
                        <td><a class="btn btn-primary" asp-action="Edit" asp-controller="PharmacyRecords" asp-route-id="@list.PharmacyId">Edit</a></td>
                    </tr>
                }

            </tbody>
        </table>
    }
    else if (ViewBag.Pharmacies.Count == 0)
    {
        <h4 class="bg-warning text-center text-white p-2">No Pharmacy Records</h4>
    }


    <a asp-action="Add" asp-controller="PharmacyRecords" class="btn btn-primary">Add new pharmacy records</a>
</div>