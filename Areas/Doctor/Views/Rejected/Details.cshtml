@{
    ViewBag.Title = "Rejected Details";
    Layout = "_DocSecondLayout";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Prescription</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
</head>

<div class="form-group">
    @if (ViewBag.Details.Count > 0)
    {
        @foreach (PatientPrescriptionVM patient in ViewBag.Details)
        {
            if (patient.PharmacistName != null)
            {
                <span>Prescription Rejected by: @patient.PharmacistName @patient.PharmacistSurname</span><br />
                <span>Prescription Date: @patient.Date</span>
                break;
            }
        }
        <table class="table table-striped table-bordered">
            @foreach (PatientPrescriptionVM patient in ViewBag.Details)
            {
                if (patient.Instruction != null)
                {
                    <tr>
                        <th>Medication Name</th>
                        <th>Condition</th>
                        <th>Rejection Reason</th>

                    </tr>

                    break;
                }
                else if (patient.ConditionDescription != null)
                {

                    <tr>
                        <th>Condition Name</th>
                        <th>Rejection Reason</th>
                    </tr>
                    break;
                }


            }
            @foreach (PatientPrescriptionVM patient in ViewBag.Details)
            {
                if (patient.Instruction != null)
                {
                    <tr>
                        <td>@patient.MedicationName</td>
                        <td>@patient.ConditionDescription</td>
                        <td>@patient.RejectReason</td>
                    </tr>
                }
                else if (patient.ConditionDescription != null)
                {
                    <tr>
                        <td>@patient.ConditionDescription</td>
                        <td>@patient.RejectReason</td>

                    </tr>
                }


            }

        </table>


    }
    else if (ViewBag.Details.Count == 0)
    {
        <h4 class="bg-warning text-center text-white p-2">No Records found</h4>
    }
</div>
