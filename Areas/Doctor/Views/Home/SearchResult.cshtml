@model PatientAccount
@{
    ViewBag.Title = "Search Results";
    Layout = null;

}

<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
<!-- MDB -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/5.0.0/mdb.min.css" rel="stylesheet" />

<body class="bg-light">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-md-10 mt-5 pt-5">
                <div class="row z-depth-3">
                    <div class="col-sm-4 bg-success rounded-left">
                        <div class="card-block text-center text-white">
                            <i class="fas fa-user fa-7x mt-5"></i>
                            <h2 class="font-weight-bold mt-4">@Model.FirstName</h2>
                            <p>Patient</p>

                            @if (@Model.FirstVisit == "Yes")
                            {
                                <a asp-action="FirstTime" asp-controller="Home" asp-area="Doctor" asp-route-id="@Model.UserID" class="btn btn-primary">Continue</a>
                            }
                            else
                            {
                                <a asp-action="PatientDiagnosis" asp-controller="Prescription" asp-area="Doctor" asp-route-id="@Model.UserID" class="btn btn-primary">Continue</a>
                            }
                            <a asp-action="SearchPatient" asp-controller="Home" asp-area="Doctor" class="btn btn-danger">Cancel</a>
                        </div>
                    </div>
                    <div class="col-sm-8 bg-white rounded-right">
                        <h3 class="mt-3 text-center">Information</h3>
                        <hr class="badge-primary mt-0 w-25" />
                        <div class="row">
                            <div class="col-sm-6">
                                <p class="font-weight-bold">Name:</p>
                                <h6 class="text-muted">@Model.FirstName</h6>
                            </div>
                            <div class="col-sm-6">
                                <p class="font-weight-bold">Surname:</p>
                                <h6 class="text-muted">@Model.Surname</h6>
                            </div>
                        </div>
                        <h4>Additional</h4>
                        <hr class="bg-primary" />
                        <div class="row">
                            <div class="col-sm-6">
                                <p class="font-weight-bold">Email:</p>
                                <h6 class="text-muted">@Model.Email</h6>
                            </div>
                            <div class="col-sm-6">
                                <p class="font-weight-bold">ID Number:</p>
                                <h6 class="text-muted">@Model.IDnumber</h6>
                            </div>
                        </div>
                        <h4>Address</h4>
                        <hr class="bg-primary" />
                        <div class="row">
                            <div class="col-sm-6">
                                <p class="font-weight-bold">Address:</p>
                                <h6 class="text-muted">@Model.AddressLine1</h6>
                                <h6 class="text-muted">@Model.AddressLine2</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
