@{
    ViewBag.Title = "Patient Conditions";
    Layout = null;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Prescription</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
</head>

<div class="form-group">
    @if (ViewBag.Conditions.Count > 0)
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Condition Name</th>
                    <th>Patient Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (PatientCondition patient in ViewBag.Conditions)
                {
                    <tr>

                        <td>@patient.ConditionName</td>
                        <td>@patient.PatientID</td>
                        <td>
                            <form asp-action="Add" asp-controller="Prescription" method="post" asp-route-id="@patient.ConditionID">
                                <button type="submit" class="btn btn-primary">Prescribe medication</button>
                            </form>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    }
    else if (ViewBag.Conditions.Count == 0)
    {
        <h4 class="bg-warning text-center text-white p-2">No conditions Records</h4>
    }

</div>

