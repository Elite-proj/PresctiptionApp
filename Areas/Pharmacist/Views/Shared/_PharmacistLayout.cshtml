@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Sidebar Dashboard Template</title>
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="~/css/Sidebar.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" charset="utf-8"></script>
  </head>
  <body>

    <input type="checkbox" id="check">
    <!--header area start-->
    <header>
      <label for="check">
        <i class="fas fa-bars" id="sidebar_btn"></i>
      </label>
      <div class="left_area">
        <h3>E<span>Presciption</span></h3>
      </div>
      <div class="right_area">
        <a asp-area="" asp-action="Logout" asp-controller="Account" class="logout_btn">Logout</a>
      </div>
    </header>
    <!--header area end-->
    <!--mobile navigation bar start-->
    <div class="mobile_nav">
      <div class="nav_bar">
        <h4>Pharmacy name</h4>
        <i class="fa fa-bars nav_btn"></i>
      </div>
      <div class="mobile_nav_items">
        <a asp-area="Pharmacist" asp-controller="Home" asp-action="SearchPatient"><i class="fas fa-search"></i><span>Search Patient</span></a>
        <a asp-area="Pharmacist" asp-controller="Profile" asp-action="Display"><i class="fas fa-user"></i><span>View profile</span></a>
        <a asp-area="Pharmacist" asp-controller="Prescriptions" asp-action="Display"><i class="fas fa-list"></i><span>view all prescriptions</span></a>
      </div>
    </div>
    <!--mobile navigation bar end-->
    <!--sidebar start-->
    <div class="sidebar">
        <div class="profile_info">
            <h4>Pharmacy name</h4>
        </div>
        <a asp-area="Pharmacist" asp-controller="Home" asp-action="SearchPatient"><i class="fas fa-search"></i><span>Search Patient</span></a>
        <a asp-area="Pharmacist" asp-controller="Profile" asp-action="Display"><i class="fas fa-user"></i><span>View profile</span></a>
        <a asp-area="Pharmacist" asp-controller="Prescriptions" asp-action="Display"><i class="fas fa-list"></i><span>view all prescriptions</span></a>
    </div>
    <!--sidebar end-->

    <div class="content">
       @RenderBody()
    </div>

    <script type="text/javascript">
    $(document).ready(function(){
      $('.nav_btn').click(function(){
        $('.mobile_nav_items').toggleClass('active');
      });
    });
    </script>

  </body>
</html>
