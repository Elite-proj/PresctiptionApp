@model RejectPrescriptionVM
@{
    ViewBag.Title = "Reject Prescription";
    //Layout = "_SecondLayout";
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Prescription</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @*<link rel="stylesheet" href="~/css/site.css" />*@
   
   
</head>

<body>
    <div class="container">
        <main>
            <form asp-controller="Prescriptions" asp-action="RejectPrescription" asp-area="Pharmacist" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h3>Rejecting @Model.ConditionName prescription by @Model.DoctorName @Model.DoctorSurname</h3>
                <div class="input-group">
                    <div class="col-12 form-group">
                        <label asp-for="RejectionReason">Rejection Reason</label>
                        <textarea asp-for="RejectionReason" class="form-control" rows="5" required></textarea>
                    </div>
                </div>
                
                <input asp-for="PrescriptionID" hidden />
                <input asp-for="ConditionName" hidden />
                <input asp-for="DoctorName" hidden/>
                <input asp-for="DoctorSurname" hidden />
                <button type="submit" class="btn btn-primary">Reject Prescription</button>

            </form>

        </main>
    </div>

</body>
