@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DigeraitMIS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="bg-white">
        <div class="jumbotron mt-2">
            <h4>Medical Records</h4>
        </div>
        <nav class="nav navbar-expand-sm navbar-toggleable-sm nav-tabs nav-justified navbar-nav text-white navbar-light bg-primary mb-3">

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <ul class=" navbar-collapse collapse d-sm-inline-flex  navbar-nav flex-grow-1" role="tablist">
                <li class="nav-item">
                    <a class="nav-link text-dark @(ViewContext.RouteData.Values["Action"].ToString()=="Diagnosis" && ViewContext.RouteData.Values["area"].ToString() == "Patient" ?"active":"")" role="tab" asp-area="Patient" asp-controller="MedicalHistory" asp-action="Diagnosis">Conditions</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link text-dark @(ViewContext.RouteData.Values["Action"].ToString()=="Medications" && ViewContext.RouteData.Values["area"].ToString() == "Patient" ?"active":"")" asp-action="Medications" asp-controller="MedicalHistory" asp-area="Patient">Medications</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark @(ViewContext.RouteData.Values["Action"].ToString()=="Allergies" && ViewContext.RouteData.Values["area"].ToString() == "Patient" ?"active":"")" asp-action="Allergies" asp-controller="MedicalHistory" asp-area="Patient">Allergies</a>
                </li>

            </ul>
            <a asp-action="Index" asp-controller="Home" asp-area="Patient" class="btn btn-primary">Back</a>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted bg-primary">
        <div class="container text-dark">

            &copy; 2022 - E-Prescription &nbsp;

        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>


