@using E_prescription.Areas.Patient.Models
@{
 
    ViewData["Title"] = "Patient Page";
    Layout = "_PatientLayout";

}

<div class="container-fluid">
    <div class="col-6">
        <h2 class="text-info">Prescriptions</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-area="Patient" asp-action="Index" asp-controller="Home" class="btn btn-info form-control text-white">Cancel</a>
    </div>

    <br />
    <br />
<!-- Content Row -->
<div class="row">
    <div class="col-xl-8 col-lg-7">
     <div class="col-9 border p-4">
            <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
         <thead>
            <tr>
                <th>Medication Name</th>
                <th>Dosage Form</th>
               @* <th>Strength</th>*@
                <th>Quantity</th>
                <th>Instruction</th>
                <th>Repeats</th>
                <th>Status</th>
             </tr>
          </thead>
        <tbody>
            @{
                    foreach (PatientPrescriptionDetailsModel patientPrescriptionDetail in ViewBag.Details)
                {
                    <tr>
                            <td>@patientPrescriptionDetail.MedicationName</td>
                            <td>@patientPrescriptionDetail.DosageDescription</td>
                           
                            <td>@patientPrescriptionDetail.Quantity</td>
                            <td>@patientPrescriptionDetail.Instruction</td>
                            <td>@patientPrescriptionDetail.RepeatDescription</td>
                            <td>@patientPrescriptionDetail.DespensedStatus</td>
                    </tr>
                }
            }
        </tbody>
     </table>
    </div>
    
         

<!-- Footer -->
<footer class="sticky-footer bg-white">
    <div class="container my-auto">
        <div class="copyright text-center my-auto">
            <span>Copyright &copy; Technites E-Prescription Solution 2022</span>
        </div>
    </div>
</footer>

</div>
</div>
</div>